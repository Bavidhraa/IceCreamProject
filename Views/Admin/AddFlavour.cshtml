@model IceCreamProject.Models.tbl_flavour

@{
    ViewBag.Title = "AddFlavour";
    Layout = "~/Views/Shared/_Layout1Admin.cshtml";
    //Layout = "~/Views/Shared/_View.cshtml";
}
<center>
    <h2 style="color:black">AddFlavour</h2>
</center>

@using (Html.BeginForm("AddFlavour", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <style>
        .box {
            background-color: bisque;
            width: 420px;
            border: 5px black;
            padding: 40px;
            margin: 30px;
            color: black;
            font-size: 15px
        }
    </style>
    <center>
        <div class="box">

            <div class="form-group">
                @Html.LabelFor(model => model.fl_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fl_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fl_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fl_image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="ImageFile" required />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="save" value="Add" class="btn btn-default" />
                </div>
            </div></div></center>
        </div>
        }

