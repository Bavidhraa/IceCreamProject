@model IEnumerable<IceCreamProject.Models.tbl_book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "order", FormMethod.Get))
{
    <b> Search Option: </b>@Html.RadioButton("option", "b_name") <text>Name</text> @Html.RadioButton("option", "b_price") <text> Price</text>
    @Html.RadioButton("option", "b_count")<text>Book Count</text>
    @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />

}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.b_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.b_desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.b_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.b_count)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4"> Records not found </td>
        </tr>
    }
    else
    {



    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.b_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.b_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.b_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.b_count)
            </td>
            <td>
                @Html.ActionLink("Order", "purchase", new { id = item.b_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.b_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.b_id })
            </td>
        </tr>
    }
    }
</table>
