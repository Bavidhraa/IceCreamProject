@model IEnumerable<IceCreamProject.Models.tbl_recipe>

@{
    ViewBag.Title = "ReplyforRecipe";
    Layout = "~/Views/Shared/partial_layout.cshtml";
}
<center>
    <h2 style="color:lightcoral">ReplyforRecipe</h2>
</center>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.r_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.r_desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin_Reply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_flavour.fl_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.r_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.r_desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin_Reply)
