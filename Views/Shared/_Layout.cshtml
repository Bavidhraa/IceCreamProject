<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Dream Cream</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body background="~/Content/IceCream1.jpg">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dream Cream", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="font-size:15px">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="font-size:15px">@Html.ActionLink("Contact Us", "Contact", "RegisterUser")</li>
                    <li style="font-size:15px">@Html.ActionLink("About Us", "About_Us", "RegisterUser")</li>
                    <li style="font-size:15px">@Html.ActionLink("Adding Recipe FAQ's", "Create", "Recipe")</li>
                    <li style="font-size:15px">@Html.ActionLink("Order the books", "Order", "RegisterUser")</li>
                    @if (Session["uid"] == null)
                    {
                        <li style="font-size:15px">@Html.ActionLink("Login", "Login", "RegisterUser")</li>
                        <li style="font-size:15px">@Html.ActionLink("Register", "Register", "RegisterUser")</li>
                    }
                    else
                    {
                        <li style="font-size:15px">@Html.ActionLink("LogOut", "Logout", "RegisterUser")</li>
                        <li style="font-size:15px">@Html.ActionLink("User Pannel", "Userpanel", "RegisterUser")</li>

                    }
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
